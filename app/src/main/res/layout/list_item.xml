<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_marginStart="1dp"
        android:backgroundTint="#03272C"
        android:layout_marginEnd="1dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing4"
        android:orientation="vertical"
        android:background="@drawable/border_all_sides_grey"
        android:paddingTop="@dimen/spacing2"
        android:paddingBottom="@dimen/spacing2">

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/spacing3"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="#29B7C1"
            android:textAlignment="textStart"
            android:text="Book Name"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:textColor="#29B7C1"
            android:paddingStart="@dimen/spacing3"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:text="Author Name"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing3"
            android:textColor="#29B7C1"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:text="Price"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/doi"
            android:paddingStart="@dimen/spacing3"
            android:textColor="#29B7C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:text="doi"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:id="@+id/image"
            android:layout_margin="@dimen/spacing4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>
</layout>