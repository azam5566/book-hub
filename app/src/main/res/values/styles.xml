<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/P900</item>
        <item name="colorPrimaryDark">@color/P700</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/P900</item>
        <item name="colorPrimaryDark">@color/P700</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dropDownListViewStyle">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupOverlay" parent="AppTheme" />


    <style name="AppBarOverlay" parent="AppTheme">
        <!--        <item name="navigationIcon">@drawable/ic_menu</item>-->
    </style>


    <style name="dropDownWhiteStroke" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">#fff</item>
    </style>


    <style name="Text2" >
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text_active" >
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text3">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Buttons -->
    <style name="greenButtonText" parent="buttonText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorSuccess</item>
        <item name="android:textSize">14sp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="buttonText" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/spacing4</item>
        <item name="android:paddingRight">@dimen/spacing4</item>
        <item name="android:paddingBottom">@dimen/spacing3</item>
        <item name="android:paddingTop">@dimen/spacing3</item>
        <item name="iconTint">@color/P900</item>
        <item name="iconSize">@dimen/iconSmall</item>
        <item name="android:textColor">@color/P900</item>
    </style>

    <style name="buttonFilled" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/P700</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:paddingLeft">@dimen/spacing4</item>
        <item name="android:paddingRight">@dimen/spacing4</item>
        <item name="android:paddingBottom">@dimen/spacing3</item>
        <item name="android:paddingTop">@dimen/spacing3</item>
        <item name="iconTint">@color/G000</item>
        <item name="iconSize">@dimen/iconSmall</item>
        <item name="android:textColor">@color/G000</item>
        <item name="cornerRadius">@dimen/spacing2</item>
    </style>

    <style name="buttonIconText" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/P900</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:paddingLeft">@dimen/spacing0</item>
        <item name="android:paddingRight">@dimen/spacing0</item>
        <item name="android:paddingBottom">@dimen/spacing3</item>
        <item name="android:paddingTop">@dimen/spacing3</item>
        <item name="iconSize">@dimen/iconXL</item>
        <item name="iconTint">@color/P900</item>
        <item name="strokeWidth">@dimen/spacing0</item>
    </style>

    <style name="customBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:padding">@dimen/spacing0</item>
        <item name="paddingStart">@dimen/spacing0</item>
        <item name="paddingEnd">@dimen/spacing0</item>
        <item name="textEndPadding">@dimen/spacing0</item>
        <item name="textStartPadding">@dimen/spacing0</item>
        <item name="android:textColor">@color/G000</item>
        <item name="android:textSize">@dimen/text_x2small</item>
    </style>

</resources>